@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="p-5">
    <div class="text-center">
        <h1 class="h4 text-gray-900 mb-4">@ViewData["Title"]</h1>
    </div>
    <form id="account" method="post">
        <div class="form-group">
            <label asp-for="Input.User"></label>
            <input asp-for="Input.User" class="form-control form-control-user" />
            <span asp-validation-for="Input.User" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control form-control-user" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="custom-control custom-checkbox small">
                <div class="checkbox">
                    <input class="custom-control-input" asp-for="Input.RememberMe" />
                    <label class="custom-control-label" asp-for="Input.RememberMe">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-user btn-block">Entrar</button>
        </div>
    </form>
    <hr>
    <div class="text-center">
        <a class="small" asp-page="./ForgotPassword">Esqueceu a senha?</a>
    </div>
</div>

